  		<url-pattern>/insertStudentsForm</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  		<servlet-name>InsertStudent</servlet-name>
  		<jsp-file>/WEB-INF/jspfiles/InsertStudent.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  		<servlet-name>InsertStudent</servlet-name>
  		<url-pattern>/insertStudent</url-pattern>
  </servlet-mapping>
  
  <servlet>
  		<servlet-name>dispalyAllStudents</servlet-name>
  		<jsp-file>/WEB-INF/jspfiles/DisplayAllStudents.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  		<servlet-name>dispalyAllStudents</servlet-name>
  		<url-pattern>/dispalyAll</url-pattern>
  </servlet-mapping>
  
